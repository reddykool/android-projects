<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight2">

    <ImageView
        android:id="@+id/grid_item_image_dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_grid_item_height"
        android:scaleType="centerCrop"
        android:src="@drawable/workinprogress"/>

    <TextView
        android:id="@+id/grid_item_text_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryTextLight"
        android:textSize="@dimen/category_text_size"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:background="@color/colorTransparentBackground"
        android:padding="@dimen/grid_spacing"
        tools:text="Primary Text"/>

</FrameLayout>