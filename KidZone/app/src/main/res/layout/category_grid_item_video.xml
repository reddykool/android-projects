<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight2">

    <ImageView
        android:id="@+id/grid_item_video_image_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/workinprogress"/>

    <TextView
        android:id="@+id/grid_item_video_length_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/category_item_padding"
        android:textColor="@color/colorPrimaryTextLight"
        android:textStyle="bold"
        tools:text="02:30"/>

    <ImageView
        android:layout_width="@dimen/category_icon_width"
        android:layout_height="@dimen/category_icon_height"
        android:src="@drawable/ic_play_circle_outline_white_24dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/grid_item_video_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryTextLight"
        android:textSize="@dimen/category_text_size"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:background="@color/colorTransparentBackground"
        android:padding="@dimen/grid_spacing"
        tools:text="Primary Text"/>

</FrameLayout>